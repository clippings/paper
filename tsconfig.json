{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    // allow sourcemap support
    "strictNullChecks": true,
    // enable strict null checks as a best practice
    "module": "es6",
    // specify module code generation
    "jsx": "react",
    // use typescript to transpile jsx to js
    "target": "es5",
    // specify ECMAScript target version
    "allowJs": true,
    // allow a partial TypeScript and JavaScript codebase
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@paper/enums": [
        "./index.enums.ts"
      ],
      "@paper/components": [
        "./index.components.ts"
      ],
      "@paper/assets": [
        "./assets/*"
      ],
      "@paper/utils": [
        "./index.utils.ts"
      ],
      "@core/*": [
        "./core/*"
      ]
    }
  },
  "include": [
    "./src/index.ts"
  ],
  "exclude": [
    "./node_modules/*"
  ]
}

